<h2 class="ui center aligned icon header">
  <i class="circular orange coffee icon"></i>
  Say something
</h2>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui card fluid raised chatbox">
            <div class="content" id="messages">
                <div class="ui feed" id="message-container">
                    <% @messages.each do |message| %>
                        <%= render 'message', obj: message %>
                    <% end %>
                </div>
            </div>
            <div class="extra content">
                <%= form_for(@message, html: {class: "ui reply form"}, url: message_path, remote: true) do |f| %>
                    <div class="field">
                        <div class="ui submit icon input">
                            <%= f.text_field :body, placeholder: "Enter your messages ...." %>
                            <%= f.button '<i class="border inverted orange icon edit"></i>'.html_safe %>
                        </div>
                    </div>
                <% end %>    
            </div>
        </div>
    </div>
    <div class="four wide column">
        <div class="ui card fluid raised chatbox">
            <div class="ui inverted vertical menu">
                <a class="active item">
                    Home
                </a>
                <a class="item">
                    Messages
                </a>
                <a class="item">
                    Friends
                </a>
            </div>
        </div>
    </div>
</div>